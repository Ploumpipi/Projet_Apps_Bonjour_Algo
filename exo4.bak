program exo3;

uses crt;

var ttc,ht,tva,nb:double;

BEGIN
	clrscr;
	ht := 350;
	writeln('Le prix HT de la vie est de',ht);
	writeln('Combien en voulez-vous?');
	readln(nb);
	tva := 0.2;
	ttc := (nb)ht/tva;
	writeln('Le prix de la vie TTC est ' ,ttc);
	readln;
END.
